<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel ="icon" href="/images/pinterest-logo.png">
    <title>Document</title>
</head>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            border-radius: 16px;
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.02);
        }
        .masonry-grid {
            columns: 5 200px;
            column-gap: 20px;
            padding: 20px;
        }
        .nav-brand {
            color: #E60023;
            font-weight: bold;
            font-size: 24px;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <a class="navbar-brand nav-brand" href="/">Pinterest Clone</a>
        <a href="/profile" class="btn btn-outline-dark me-2">Profile</a>
        <div class="ms-auto">

            <a href="/ " class="btn btn-outline-dark me-2 logout">logout</a>
        </div>
        <div></div>
    </nav>

    <div class="container-fluid">
        <div class="masonry-grid">
            <!-- Sample pins - in a real app these would be dynamically generated -->
            <%allPost.forEach((post)=>{ %>
                <div class="card">
                    <img src="/uploads/<%=post.postImage%>" class="card-img-top" alt="pin">
                </div>
            <% }) %>
            <%allPost.forEach((post)=>{ %>
                <div class="card">
                    <img src="/uploads/<%=post.postImage%>" class="card-img-top" alt="pin">
                </div>
            <% }) %>
            <%allPost.forEach((post)=>{ %>
                <div class="card">
                    <img src="/uploads/<%=post.postImage%>" class="card-img-top" alt="pin">
                </div>
            <% }) %>
            
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/home.js"></script>

</body>
</html>