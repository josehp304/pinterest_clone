<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-header {
            padding: 40px 20px;
            text-align: center;
            background-color: #f8f9fa;
        }
        .profile-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
            object-fit: cover;
        }
        .masonry-grid {
            columns: 4 200px;
            column-gap: 20px;
            padding: 20px;
        }
        .card {
            border-radius: 16px;
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.02);
        }
        .uploadContainer{
            /* background-color: */
            width: 100%;
            display: flex;
            justify-content: center;
            text-align: center;
            font-size: 20px;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <a class="navbar-brand" href="/" style="color: #E60023; font-weight: bold; font-size: 24px;">Pinterest Clone</a>
        <a href="/home" class="btn btn-outline-dark me-2">Home</a>
        <div class="ms-auto">
            <form action="/logout" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-outline-dark">Logout</button>
            </form>
        </div>
    </nav>

    <div class="profile-header">
        <img src="https://via.placeholder.com/150" alt="Profile Picture" class="profile-avatar">
        <h2 class="username"><%= user.username%></h2>
        <p class="bio text-muted">Your Bio Goes Here</p>
    </div>
    <div class="uploadContainer">
        <form action="/upload" method="POST" enctype="multipart/form-data"  >
            <input type="text" placeholder="Enter caption" name="filecaption">
            <input type="file" name="file">
            <button style="background-color: red; width: fit-content; color:white; border:0; border-radius:20px;" type ="submit" >Create new post</button>
        </form>
    

    </div>
    <div class="container-fluid">
